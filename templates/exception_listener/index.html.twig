{% extends 'base.html.twig' %}

{% block title %}
  Page non trouvée - Erreur 404
{% endblock %}

{% block body %}
  <style>
    .error-wrapper {
      margin: 5em auto;
      max-width: 600px;
      text-align: center;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: #333;
    }
    
    .error-code {
      font-size: 6rem;
      font-weight: bold;
      color: #ff8c42;
    }
    
    .error-message {
      font-size: 1.5rem;
      margin-top: 1rem;
      margin-bottom: 2rem;
    }
    
    .error-actions a {
      display: inline-block;
      margin: 0.5rem;
      padding: 0.75rem 1.5rem;
      background-color: #ff8c42;
      color: white;
      text-decoration: none;
      border-radius: 5px;
      transition: background 0.3s;
    }
    
    .error-actions a:hover {
      background-color: #e9782e;
    }
  </style>

  <div class="error-wrapper">
    <div class="error-code">404</div>
    <div class="error-message">Oups ! La page que vous cherchez n'existe pas.</div>
    <div class="error-actions">
      <a href="{{ path('app_index') }}">Retour à l'accueil</a>
    </div>
  </div>
{% endblock %}
